{
  "designSystem": {
    "name": "Linear Inspired UI",
    "typography": {
      "fontFamily": {
        "primary": "Inter, sans-serif",
        "fallback": "system-ui, -apple-system, BlinkMacSystemFont, Segoe UI"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "semiBold": 600,
        "bold": 700
      },
      "fontSizes": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px"
      },
      "letterSpacing": {
        "tight": "-0.01em",
        "normal": "0",
        "wide": "0.01em"
      },
      "lineHeights": {
        "base": 1.5,
        "tight": 1.2,
        "relaxed": 1.75
      }
    },
    "colors": {
      "background": {
        "base": "#0E0E10",
        "surface": "#1C1C1E",
        "surfaceHover": "#2C2C2E"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#A1A1AA",
        "muted": "#6B7280",
        "link": "#3B82F6",
        "success": "#22C55E",
        "warning": "#FACC15",
        "error": "#EF4444"
      },
      "brand": {
        "primary": "#3B82F6",
        "accent": "#6366F1",
        "highlight": "#10B981"
      },
      "border": {
        "default": "#2A2A2D",
        "focus": "#6366F1"
      },
      "code": {
        "comment": "#6B7280",
        "string": "#A7F3D0",
        "keyword": "#F472B6",
        "function": "#60A5FA",
        "variable": "#FBBF24"
      }
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "base": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px"
    },
    "radii": {
      "sm": "4px",
      "md": "6px",
      "lg": "8px",
      "xl": "12px",
      "pill": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px rgba(0, 0, 0, 0.15)"
    },
    "components": {
      "button": {
        "base": {
          "padding": "8px 16px",
          "borderRadius": "6px",
          "fontWeight": 500,
          "fontSize": "14px",
          "textTransform": "none"
        },
        "primary": {
          "background": "#3B82F6",
          "color": "#FFFFFF",
          "hover": "#2563EB"
        },
        "secondary": {
          "background": "#1C1C1E",
          "color": "#FFFFFF",
          "hover": "#2C2C2E"
        }
      },
      "card": {
        "background": "#1C1C1E",
        "borderRadius": "12px",
        "padding": "24px",
        "shadow": "md"
      },
      "input": {
        "background": "#0E0E10",
        "border": "1px solid #2A2A2D",
        "color": "#FFFFFF",
        "padding": "12px",
        "borderRadius": "6px",
        "focusBorderColor": "#6366F1"
      }
    },
    "layout": {
      "grid": {
        "columns": 12,
        "gutter": "24px"
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      },
      "maxWidths": {
        "content": "1140px",
        "narrow": "720px"
      }
    },
    "effects": {
      "transitions": {
        "default": "all 0.2s ease-in-out",
        "fast": "all 0.1s ease-in-out"
      },
      "blur": {
        "backdrop": "blur(12px)"
      }
    },
    "icons": {
      "style": "line",
      "strokeWidth": "1.5px",
      "size": "16px"
    }
  }
}
